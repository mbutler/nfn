#interface-box
  background: rgba(#000, 0.75)
  border: 1px solid #000
  border-radius: 6px
  box-shadow: 0 0 15px 2px rgba(#000, 0.4)
  box-sizing: border-box
  padding: 11px 12px 13px

#birds-button
  background: #693
  border: 2px solid #fff
  border-radius: 3px
  color: #fff
  font-family: 'Open Sans', sans-serif
  font-size: 11px
  text-transform: uppercase

  &:hover
    background-color: lighten(#693, 25%)

  &.action
    background: #f90
    float: right

    &:hover
      background-color: lighten(#f90, 25%)


.birds-interface
  @extends #interface
  @import "menu"

  overflow: none !important

  a
    &.full
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: 100%

  $data-entry-height = 54px
  .data-entry
    @extends #interface-box
    bottom: 20px
    color: #d3d3d3
    height: $data-entry-height
    position: fixed !important
    width: 770px
    z-index: 1000
    left: 220px

    > *
      display: inline-block

    button
      @extends #birds-button

    > .helper-box
      @extends #interface-box
      bottom: $data-entry-height + 20px
      color: #d3d3d3
      font-size: 13px
      left: 50px
      opacity: 0
      position: absolute
      transition: all 0.7s cubic-bezier(.27, .66, .49, .95)
      width: 100%

      &.shown
        left: 0
        opacity: 1

      h4
        margin: 0 0 0.15em 0

      p
        line-height: 1.25em
        margin: 0.15em 0 0 0

    > .post-finish
      display: none

    > .field-box
      @extends #interface-box
      bottom: 0
      font-size: 0.85em
      left: -200px
      padding: 0
      position: absolute
      width: 180px

      section

        ul
          @extends #semantic-list
          transition: all 0.7s cubic-bezier(.27, .66, .49, .95)

          li
            box-sizing: border-box
            border-bottom: 1px solid #777
            color: #fff
            height: 50px
            padding: 4px 10px
            transition: all 0.1s cubic-bezier(.27, .66, .49, .95)

            &:hover
              background: rgba(#bbb, 0.5)
              cursor: pointer

            &:first-child
              border-top-left-radius: 6px
              border-top-right-radius: 6px

            &:last-child
              border-bottom-color: transparent
              border-bottom-left-radius: 6px
              border-bottom-right-radius: 6px

            .label
              font-weight: 700

            .data
              color: #0f0

    .entry

      div
        border-radius: 3px
        display: inline-block
        height: 30px

        &.disabled
          background: #ccc

          button
            background: darken(#693, 20%)
            border: 2px solid #ccc

          input
            background: #ccc

        > *
          box-sizing: border-box
          height: 30px
          vertical-align: top

        input
          appearance: none
          border: 0
          border-radius: 3px
          margin: 0 10px 0 0
          outline: none
          padding: 3px 5px

          &.large
            width: 220px

          &.medium
            width: 160px

          &.small
            width: 100px

          &.focus-text
            color: #999

    .actions
      float: right

      ul
        @extends #semantic-list
        display: inline-block

        &.interface-actions
          margin: 0 0 0 20px

          li
            background: #ff7c09

            &:hover
              background: lighten(#ff7c09, 10%)

        li
          background: #693
          border-radius: 2px
          box-shadow: 0 0 8px 2px #000
          box-sizing: border-box
          color: #fff
          cursor: pointer
          display: inline-block
          font-family: 'Open Sans', sans-serif
          font-size: 11px
          height: 26px
          margin: 2px 2px 2px 12px
          padding: 2px 6px 3px
          text-transform: uppercase
          vertical-align: top

          &:hover
            background: lighten(#693, 10%)

  $transcription-area-padding = $menu-height + 30
  #transcription-area
    margin-top: $transcription-area-padding
    overflow-y: auto
    position: relative

  #buttons
    background: rgba(#000, 0.4)
    border-bottom-right-radius: 5px
    display: none
    left: 10px
    padding: 10px
    position: fixed
    top: 110px

    button
      @extends #birds-button

  #rows
    margin: 0 auto
    position: absolute
    top: 0
    width: 100%

    .row
      height: 12px
      position: absolute
      top: 100px
      width: 100%

      &:before
        background: rgba(#f00, 0.22)
        box-shadow: 0 0 12px 2px rgba(#000, 0.35)
        content: ""
        height: 2px
        position: absolute
        top: 5px
        width: 100%

      &.selected

        &:before
          background: rgba(#0f0, 0.42)

  #images
    height: 100%
    max-height: 100%
    width: 100%

    img
      display: none
      box-shadow: 0 0 25px 0 rgba(#000, 0.5)

      &#corner
        position: absolute

      &#standard
        box-sizing: border-box
        padding: 0 10px $transcription-area-padding
        width: 100%

  .boxes
    margin: 150px 100px
    position: relative

    img
      @extends #no-select
      box-shadow: 0 0 9px rgba(#000, 0.7)

  .box
    background: rgba(#f00, 0.13)
    border: 1px solid rgba(#fff, 0.1)
    position: absolute !important

    &.resizable,
    &.selected
      background: rgba(#f00, 0.35)
      border-color: #fff

    &.red
      background: rgba(#f00, 0.25)
    &.green
      background: rgba(#0f0, 0.25)
    &.blue
      background: rgba(#00f, 0.25)
