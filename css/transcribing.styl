  height: 100%;
  overflow: hidden;
  margin: 0 auto;
  cursor: pointer;
  float: left;
}

.mCSB_horizontal .mCSB_scrollTools .mCSB_buttonRight {
  right: 0;
  bottom: auto;
  margin-left: -40px;
  margin-top: -16px;
  float: right;
