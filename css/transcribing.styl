/* TOOLTIPS */
.transcriber.birds, .transcriber.sernac {
  .tooltip {
    border-radius: 2px;
    display: none;
    position: absolute;
    width: 175px;
    right: 0;
    padding: 7px 12px 12px 12px;
    background: white;
    text-align: left;


    -webkit-box-shadow: rgba(0, 0, 0, 0.2) 0 0 3px 2px;
    -moz-box-shadow: rgba(0, 0, 0, 0.2) 0 0 3px 2px;
    box-shadow: rgba(0, 0, 0, 0.2) 0 0 3px 2px;
    z-index: 1001;

    img {
      border-radius: 2px;
      display: none;
      margin: 0 0 3px 0;
    }

    .description a { text-decoration: underline; }

    &.example { 
      height: 150px;

      .loader { top: 80px; }
        .btn    { position: absolute; bottom: 14px; left: 50%; width: 80px; margin-left: -40px; }

    }

    &.error {

      strong { color: red; }

      }

    &.step {
      padding: 0;
      width: 175px;

      .tip { left: auto; right: 10px; margin-left: 0; } 

        ul {
          @extends #semantic-list
          li {
            box-sizing: border-box;
            padding: 5px 10px 5px 10px;
            border-bottom: 1px solid #EDEDED;

              &.completed {
                border-bottom: 1px solid #EDEDED;
                // background:url(images/bullet-green.png) no-repeat center left;
                a { color: #693;  }
              }

              // background:url(images/bullet-orange-hollow.png) no-repeat center left;

              &:hover a { text-decoration: underline; }

            &.selected {
              background:url(images/bullet-gray.png) no-repeat center left;
              a { color: #666666; }
            }

            a {
              font-size: 13px;
              color: #F60;
            }

            span {
              display: block;
              font-size: 11px;
              line-height: 15px;
            }
          }
        }
      }

    &.with-spinner {
    width: 369px;
    height: 203px;
    box-sizing: border-box;

    img { position: absolute; width: auto; height: auto; left: 5px; top: 5px; border: 1px solid #838383; }
    .btn { position: absolute; bottom: 15px; right: 15px; width: 80px; }
    .loader { top: 50%; margin-top: -34px; }

  }

  .loader {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -30px;
    margin-left: -30px;
    border: none;
    box-shadow: none;
  }

    &.ne .tip { // north east
      position: absolute;
      top: -6px;
      right: 7px;
      width: 13px;
      height: 6px;
      background: url(images/transcribers/tooltip-tip-top.png) no-repeat;
      }

    &.upsidedown .tip {
      position: absolute;
      top: -6px;
      left: 50%;
      margin-left: -6px;
      width: 13px;
      height: 6px;
      background: url(images/transcribers/tooltip-tip-top.png) no-repeat;
      }

  .tip {
    position: absolute;
    bottom: -6px;
    left: 50%;
    margin-left: -6px;
    width: 13px;
    height: 6px;
    background: url(images/transcribers/tooltip-tip.png) no-repeat;
  }

  .title {
    font: bold 13px "Open Sans", sans-serif;
    color: #191919;
    text-transform: uppercase;
  }

  .description {
    padding: 4px 0 0 0;
    margin: 0 0 10px 0;
    font: normal 13px "Helvetica", Arial, sans-serif;
    color: #666;
  }

  .description a { color: #666; }
    
  .btn {
    padding: 5px 0;
    width: 83px;
    font-family: "Open Sans", "Helvetica", sans-serif;
    font-size: 11px;
    font-weight: normal;

    text-align: center;
    -webkit-transition-property: background-color;
    -moz-transition-property: background-color;
    -o-transition-property: background-color;
    transition-property: background-color;
    -webkit-transition-duration: 300ms;
    -moz-transition-duration: 300ms;
    -o-transition-duration: 300ms;
    transition-duration: 300ms;

    &.main, &.secondary { font-weight: normal; }

    &.main       { float: none; background: #F60; color: #FFF; }
    &.secondary  { float: none; background: #f1f1f1; color: #666; border: 1px solid #ccc; }
    &.main:hover { background: #FF7C09; }
    &.secondary:hover { background: #fff; }
   }
  }
}

