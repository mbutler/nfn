/* STATUSBAR */
.transcriber.sernac { 

  .statusbar {

    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    min-width: 1024px;
    height: 80px;
    box-shadow: 0 0 5px 5px rgba(0, 0, 0, 0.6);
    background: #222222 url("images/transcribers/bg-header.png");
    border-bottom: 1px solid rgba(255, 255, 255, 0.02);
    z-index: 101;

    .left {
      float: left;
      height: 60px;
      margin: 0;
      padding: 20px 0 0 24px;
    }

    .right {

      position:absolute;
      right: 0;
      top: 0;

      clear:both;
      overflow:hidden;

      .separator {
        position:relative;
        height:80px;
        width:1px;
        &::before { position:absolute; top:0; left:1px; height:80px; width:1px; content: ''; border-left: 1px solid rgba(255,255,255,0.1); }
        &::after  { position:absolute; top:0; left:0; height:80px; width:1px; content: ''; border-left: 1px solid black; }
      }

      .separator, .off, .count {
        float:left;
        margin: 0 5px 0 0;
      }

      .off {
        width: 50px;
        text-align: center;

        a {
        display:block;
        width: 33px;
        height: 33px;

        margin: 26px auto;
        padding:0;
        border:none;

        background: url(images/btn-off.png) no-repeat 0 0;

        &:hover  { background-position: 0 -32px; }
        &:active  { background-position: 0 -66px; }

        }
      }

      .count {

        padding-right: 10px;
        margin: 15px 10px 0 10px;

        .counter {
          float:left;
          font:bold 38px "Open Sans";
          color:white;
          font-weight:800;
          margin: 0 5px 0 0;
        }

        strong {
          float:left;
          width: 50px;
          line-height: 15px;
          margin: 12px 0 0 0;

          font:bold 12px "Open Sans";
          color:white; font-weight:800;
          text-transform: uppercase;
        }
      }
    }

    h1, h3 {
      cursor: default;
      font-family: "Open Sans", sans-serif;
      margin: 0;
    }

    h1 { font-weight:bold; font-size: 17px; color: white; font-weight: 800; text-transform: uppercase; }
    h3 { font-weight: normal; font-size: 13px; color: #999; } 

    .counter {
      display:inline-block;
      margin: 0 7px 0 0;
      font: bold 38px "Open Sans";
      color: white;
      font-weight: 800;
    }

    strong {
      display:inline-block;
      width: 50px;
      margin: 0 10px 0 0;
      line-height: 0;
      line-height: 15px!important;
      font: bold 12px "Open Sans";
      color: white;
      font-weight: 800;
      text-transform: uppercase;
    }
  }
}

